# Enable URL rewriting
RewriteEngine On

# Set the base directory (change / if your project is in a subfolder)
RewriteBase /

# If the request is not pointing to an existing file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect everything to index.php
RewriteRule ^ index.php [QSA,L]
